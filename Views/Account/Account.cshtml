@model Bank_Accounts.Models.AccountBundle

@{
    ViewData["Title"] = "Account";
}

<div class="row">
    <form action="/Transact" method="POST" class="row mt-5 mx-auto form-control">
        <div class="col-6 d-inline-block">
            <input  asp-for="@Model.transaction.UserId" type="hidden" />
            <label asp-for="@Model.transaction.Amount" class="col-6">Deposit/Withdrawal</label>
            <input asp-for="@Model.transaction.Amount" type="number" placeholder="Enter Amount" class="form-control d-inline-block col-5 m-auto" />
        </div>
        <div class="d-inline-block">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
        <div class="col-4 d-inline-block">
            <label asp-for="@Model.user.Balance" class="d-inline-block col-3 p-0 text-right"></label>
            <input asp-for="@Model.user.Balance" class="form-control d-inline-block col-8 m-auto" readonly />
        </div>
    </form>
    <div class="row mt-5 mx-auto table-responsive">
        <table class="table table-striped table-dark table-bordered table-hover">
            <thead>
                <tr>
                    <th scope="col">Amount</th>
                    <th scope="col">Date</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (Transaction transaction in @Model.user.Transactions)
                    {
                        <tr>
                            <td>@transaction.Amount</td>
                            <td>@transaction.CreatedAt</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
